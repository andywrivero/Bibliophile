<Window x:Class="BibliophileApplication.Views.UserInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliophileApplication.Views"
        xmlns:mycontrols="clr-namespace:BibliophileApplication.MyControls"
        mc:Ignorable="d"
        Title="" Height="350" SizeToContent="Width">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="90"/>
        </Style>
    </Window.Resources>

    <StackPanel Orientation="Vertical">
        <mycontrols:UserCardInfoControl x:Name="usercardinfocontrol" Margin="10" Editable="True"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 0">
            <Button Content="Accept" Click="Accept_Button_Click"/>
            <Button Content="Cancel" Margin="200 0 0 0" Click="Cancel_Button_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
